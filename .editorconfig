; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_size = 4

[*.{html,yml}]
indent_size = 2

[LICENSE.txt]
end_of_line = crlf
insert_final_newline = false

[Makefile]
indent_style = tab
